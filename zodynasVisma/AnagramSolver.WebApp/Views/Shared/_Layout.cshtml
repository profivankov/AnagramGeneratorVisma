<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnagramSolver.WebApp</title>

    <link href="https://bootswatch.com/4/solar/bootstrap.min.css" rel="stylesheet" />
    <script src="https://bootswatch.com/_vendor/jquery/dist/jquery.min.js"></script>

    <script src="https://bootswatch.com/_vendor/popper.js/dist/umd/popper.min.js"></script>
    <script src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" />


</head>
<body>
    <div class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
        <div class="container">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">AnagramSolver</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a asp-controller="AnagramSolver" asp-action="Index" class="nav-link">Anagrams</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="themes">Dictionary <span class="caret"></span></a>
                        <div class="dropdown-menu">
                            <a asp-controller="Dictionary" asp-action="Index" class="dropdown-item">Dictionary</a>
                            <div class="dropdown-divider"></div>
                            <a asp-controller="Dictionary" asp-action="AddWord" class="dropdown-item">Add</a>
                            <div class="dropdown-divider"></div>
                            <a asp-controller="Dictionary" asp-action="RemoveWord" class="dropdown-item">Remove</a>
                            <div class="dropdown-divider"></div>
                            <a asp-controller="Dictionary" asp-action="EditWord" class="dropdown-item">Edit</a>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="UserLog" asp-action="Index" class="nav-link">User Log</a>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Search" asp-action="Index" class="nav-link">Search</a>
                    </li>

                </ul>

                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link">Visma</a>
                    </li>
                </ul>

            </div>
        </div>
    </div>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />

        <footer>
            <p>&copy; 2019 - AnagramSolver.WebApp</p>
        </footer>
    </div>

</body>
</html>
